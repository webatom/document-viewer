{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 80,
        "bracketSameLine": true,
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.ts"],
      "options": {
        "printWidth": 100,
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.less"],
      "options": {
        "parser": "less",
        "singleQuote": false,
        "endOfLine": "auto"
      }
    }
  ]
}
